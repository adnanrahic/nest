<div class="col-lg-offset-3 col-lg-6">
    <form action="/video/update/<%= video.id %>" method="POST" class="form-horizontal opaque-form form">
        <div>
        <legend class="text-center" style="color: white;">Edit video</legend>
        
        <div class="form-group">
            <input type="text" class="form-control" name="title" value="<%= video.title %>">
        </div>
        <div class="form-group">
            <textarea class="form-control" rows="3" name="description"><%= video.description %></textarea>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="URL" value="<%= video.URL %>">
        </div>
        <div class="form-group">
            <input type="hidden" name="_csrf" value="<%- _csrf %>">            
            <input type="submit" class="btn btn-success pull-right" value="Submit" style="margin-top: 20px;">
        </div>
        </div>
    </form>
</div>